<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50sp"
        android:text="PAR OU ÍMPAR">
    </TextView>
    <TextView
        android:id="@+id/computadorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="COMPUTADOR">
    </TextView>
    <TextView
        android:id="@+id/numeroTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@android:dimen/notification_large_icon_height"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/umTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/doisTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/quatroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/cincoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/parTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:id="@+id/imparTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ímpar"
            android:textSize="25sp"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Resultado"
        android:textSize="30sp"
        android:layout_marginTop="150sp"
        android:textAlignment="center">
    </TextView>

</LinearLayout>